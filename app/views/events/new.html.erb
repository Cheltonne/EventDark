<div class="text-center mt-5">
<h1>Créer un nouveau bail obscur.</h1>
<% if @errors%>
  <% @errors.messages.each do |message|%>
  <div class="alert alert-danger" role="alert">
  Le champ <%= message[0] %> a le problème suivant: <%= message[1][0] %>
  </div>
    <% end%>
<% end %>

<%= form_tag url_for(action: 'create'), method: "post" do %>
  <%= label_tag 'Titre' %>
  <%= text_field_tag 'title' %>
  <br /> <br />

  <%= label_tag 'Contenu' %>
  <%= text_area_tag 'body' %>
  <br /> <br />

  <%= label_tag 'Date de début' %>
  <%= text_area_tag 'start_date' %>
  <br /> <br />

  <%= label_tag 'Durée(ceci doit être un multiple de 5)' %>
  <%= text_area_tag 'duration' %>
  <br /> <br />

  <%= label_tag 'Localisation' %>
  <%= text_area_tag 'location' %>
  <br /> <br />

  <%= label_tag 'Prix' %>
  <%= text_area_tag 'price' %>
  <br /> <br />

  <%= submit_tag "Créer un bail" %>

  <% end %>
  </div>