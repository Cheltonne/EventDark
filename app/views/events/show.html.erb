<div class="body_welcome">
  <p>Posté par: <%= link_to @admin, user_path(@event.admin.id) %></p>
  <h3>Titre: <%= @title %></h3>
  <p>Description de l'évènement:</p>
  <p><%= @event.description %></p>
  <p>Créé le: <%= @creation_date %></p>
  <p><%= link_to "Editer l'évènement", edit_event_path %></p>
  <p><%= link_to "Supprimer l'évènement", event_path(@event.id), method: :delete, data: { confirm: 'Êtes-vous sûr.e ?' }%></p>
</div>